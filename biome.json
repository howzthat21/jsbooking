{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["node_modules", "dist", "build", ".biomeignore"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  
  "linter": {
    "rules": {
      "style": {
        "useConst": "off"
      }
      
    }
  },
  "organizeImports": {
    "enabled": false
  }
,
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
